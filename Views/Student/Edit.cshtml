@model MyFirstApplication.Models.Student


<form method="post" asp-action="Edit">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Student</h2>
			<hr />
		</div>
		@* <input type="hidden" asp-for="Id" /> *@

		<div class="form-group">
			<label asp-for="Id" class="control-label"></label>
			<input asp-for="Id" class="form-control" readonly />
		</div>
		<div class="form-group">
			<label asp-for="FirstName" class="control-label"></label>
			<input asp-for="FirstName" class="form-control" />
			@* 			<span asp-validation-for="Firstname" class="text-danger"></span>
			*@
		</div>
		<div class="form-group mb-3">
			<label asp-for="LastName"></label>
			<input asp-for="LastName" class="form-control" />
			@* 			<span asp-validation-for="Lastname" class="text-danger"></span>
			*@
		</div>

		<div class="form-group mb-3">
			<label asp-for="Course"></label>
			<input asp-for="Course" class="form-control" />
			@* 		<span asp-validation-for="Course" class="text-danger"></span>
			*@
		</div>
		
		<div class="form-group mb-3">
			<label asp-for="Email"></label>
			<input asp-for="Email" class="form-control" />
			@* 		<span asp-validation-for="Course" class="text-danger"></span>
			*@
		</div>

		<div class="mb-3">
			<label asp-for="DateCreated"></label>
			<input asp-for="DateCreated" class="form-control" />
			@* 			<span asp-validation-for="DateCreated" class="text-danger"></span>
			*@
		</div>

		<br>

		<div class="form-group">
			<button type="submit" class="btn btn-primary">Update</button>
			<a asp-controller="Student" asp-action="Index">Back to List</a>
		</div>

	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
