@model IEnumerable<MyFirstApplication.Models.Student>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Student" asp-action="Create" class="btn btn-primary">Create New Student </a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Lastname</th>
                <th>Firstname</th>
                <th>Course</th>
                <th>Email</th>
                <th>Date Created</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">
                        @obj.Id
                    </td>
                    <td width="20%">
                        @obj.LastName
                    </td>
                    <td width="20%">
                        @obj.FirstName
                    </td>
                    <td width="10%">
                        @obj.Course
                    </td>
                    <td width="20%">
                        @obj.Email
                    </td>
                    <td width="20%">
                        @obj.DateCreated
                    </td>
                    <td>
                        <div class="w-20 btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@obj.Id">&nbsp;Edit&nbsp; </a>|
                            <a asp-action="Details" asp-route-id="@obj.Id">&nbsp;Details&nbsp;</a>|
                            <a asp-action="Delete" asp-route-id="@obj.Id">&nbsp;Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
