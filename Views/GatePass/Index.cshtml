@model IEnumerable<MyFirstApplication.Models.GatePass>

@{
    ViewData["Title"] = "Gate Pass List";
}

<h2>Gate Pass List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Gate Pass</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Applicant Type</th>
            <th>Department</th>
            <th>Vehicle Plate No</th>
            <th>Application Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ApplicantType</td>
                <td>@item.Department</td>
                <td>@item.VehiclePlateNo</td>
                <td>@item.ApplicationDate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
